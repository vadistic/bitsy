{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es2019", "ESNext"],
    "target": "es2018",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"]
}
